<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical" >

    <com.bc.mcapp.common.CustomScrollView
        android:id="@+id/good_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <android.support.v4.view.ViewPager
                android:id="@+id/good_viewPager"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#fff" >
            </android.support.v4.view.ViewPager>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/good_goodName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:textSize="26sp"
                    android:text="TextView" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#F2F3F5" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/act_scscsc"
                        />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收藏" />

                        <TextView
                            android:id="@+id/goods_tvNowBuy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="立即购买"
                            android:padding="8dp"
                            android:textSize="18sp"
                            android:textColor="@color/write"
                            android:background="@drawable/dialog_btn"
                            />



                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical" >

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:background="#eee" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/good_goodMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textColor="#E30001"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/good_oldMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="TextView"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical" >

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:background="#eee" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dp" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="提示：17天无理由退货"
                            android:textColor="#E64E5F" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="快递：免运费" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/good_sellNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="销量：17983" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical" >

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:background="#eee" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dp" >

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/zeng" />

                    <TextView
                        android:id="@+id/good_giveScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="14141"
                        android:textColor="#F15353" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="积分" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="选择分类"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/brq" />
            </LinearLayout>

            
            <LinearLayout
                 android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="center_vertical"
                android:padding="10dp" >

                

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="商品评价"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >
                          <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="好评"
                       android:textSize="13sp" />
                            <TextView
                        android:id="@+id/good_hao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="141414"
                         android:textSize="13sp" 
                        android:textColor="#F15353"/>
                              <TextView
                        android:id="@+id/good_pin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="55555人评论"
                        android:textSize="13sp" />
                        
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:src="@mipmap/brq" />
            </LinearLayout>
            
              <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:background="#eee" />
            
            <com.bc.mcapp.common.MyListView
                    android:id="@+id/good_listView"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="#fff"
                    >
                </com.bc.mcapp.common.MyListView>
                
            <LinearLayout 
                android:id="@+id/good_allPinLin"
                android:gravity="center"
                android:padding="15dp"
                 android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/good_allPinText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#E30001"
                    android:text="查看全部评价" 
                    android:textSize="15sp"/>

            </LinearLayout>
            
            </LinearLayout>
       <View 
           android:layout_marginTop="5dp"
            android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#fff"
           
           />
            <LinearLayout
                
                
                android:gravity="center_vertical"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff" >
              <View 
                   android:textColor="#209D5D"
                  android:layout_weight="1"
                  android:layout_width="match_parent"
                android:layout_height="1dp" 
                android:background="#209D5D"
                  
                  />

              <TextView 
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                   android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:text="相关推荐"
                android:textColor="#209D5D"
                  />
               <View 
                    android:textColor="#209D5D"
                  android:layout_weight="1"
                  android:layout_width="match_parent"
                android:layout_height="1dp" 
                android:background="#209D5D"
                  
                  />
            </LinearLayout>
          
            
          <com.bc.mcapp.common.CustomGridView
                  android:id="@+id/good_gridView"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                 android:background="#fff"
                  android:numColumns="2" >
              </com.bc.mcapp.common.CustomGridView>
        </LinearLayout>
    </com.bc.mcapp.common.CustomScrollView>

</LinearLayout>