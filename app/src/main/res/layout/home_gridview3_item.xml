<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/write"
     >

  
     <android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
         cardCornerRadius="10dp"
        cardElevation="2dp"
         contentPadding="2dp"
    >
   

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/home_grid3_item_iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@mipmap/b6a" />

        <TextView
            android:id="@+id/home_grid3_item_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_grid3_item_iv"
            android:layout_alignLeft="@+id/home_grid3_item_iv"
            android:layout_alignRight="@+id/home_grid3_item_iv"
            android:textSize="14sp"
            android:layout_margin="5dp"
            android:textColor="@color/text"
            android:lines="2"
            android:text="TextView" />

        <TextView
            android:id="@+id/home_grid3_item_tv2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_grid3_item_tv1"
            android:layout_alignLeft="@+id/home_grid3_item_iv"
            android:textColor="@color/Theme"
            android:textSize="16sp"
            android:singleLine="true"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/home_grid3_item_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_grid3_item_tv1"
            android:layout_alignRight="@+id/home_grid3_item_iv"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/text"
            android:text="去看看" />
    
    </RelativeLayout>
   </android.support.v7.widget.CardView> 


</RelativeLayout>