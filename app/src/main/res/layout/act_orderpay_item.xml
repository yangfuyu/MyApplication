<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#f9f9f9" >

        <ImageView
            android:id="@+id/DingDan_ImageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:id="@+id/GouWuChe_EditerBefore_RelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/DingDan_ImageView" >

            <TextView
                android:id="@+id/DingDan_GoodName"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:lines="2"
                android:text="MediumText11111111111111111111111111111111111111111"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/DingDan_ShopNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/DingDan_GoodName"
                android:text="X 1"
                android:layout_marginRight="25dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#787878" />

            <TextView
                android:id="@+id/DingDan_ShopPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/DingDan_GoodName"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/DingDan_GoodName"
                android:layout_marginRight="15dp"
                android:textSize="16sp"
                android:text="¥  99999.00"
                android:textColor="#e64759" />

            <TextView
                android:id="@+id/DingDan_GoodsInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/DingDan_ShopNum"
                android:layout_alignBottom="@+id/DingDan_ShopNum"
                android:layout_alignLeft="@+id/DingDan_GoodName"
                android:text="颜色：红色"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#9f9f9f" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#ffffff"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/DingDan_ShopAllNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="共1件" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/DingDan_ShopAllNum"
            android:layout_alignBottom="@+id/DingDan_ShopAllNum"
            android:layout_toRightOf="@+id/DingDan_ShopAllNum"
            android:textColor="#e64759"
            android:layout_marginLeft="5dp"
            android:text="合计：¥  " />

        <TextView
            android:id="@+id/DingDan_ShopAllPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView1"
            android:layout_toRightOf="@+id/textView1"
            android:textColor="#e64759"
            android:text="TextView" />

    </RelativeLayout>

</LinearLayout>
