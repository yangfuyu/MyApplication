<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/write"
    android:orientation="vertical" >
    
<RelativeLayout
    	android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
		android:background="@color/Theme"
	>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="我的账户"
            android:textSize="18sp"
            android:textColor="@color/write" />

        <ImageView
            android:id="@+id/myaccount_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/aqj" />
        <TextView 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"
        android:layout_alignParentBottom="true"
        />

    </RelativeLayout>

<RelativeLayout
    android:layout_below="@+id/top"
    android:id="@+id/account_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/account_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        
        android:text="昵称" />

    <ImageView
        android:id="@+id/account_iv_name"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/brq" />

    <TextView
        android:id="@+id/account_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:textColor="@color/text"
        android:layout_toLeftOf="@+id/account_iv_name"
         />
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"
        android:layout_below="@+id/account_tv1"
        />

    <TextView
        android:id="@+id/acccount_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/account_tv_name"
        android:layout_centerVertical="true"
        android:textColor="@color/text"
        android:textSize="14sp"
        />

</RelativeLayout>
<RelativeLayout
    android:layout_below="@+id/account_name"
    android:id="@+id/account_sex"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/account_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:text="性别" />

    <ImageView
        android:id="@+id/account_iv_sex"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/brq" />

    <TextView
        android:id="@+id/account_tv_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:textColor="@color/text"
        android:layout_toLeftOf="@+id/account_iv_sex"
        />
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"
        android:layout_below="@+id/account_tv2"
        />

    <TextView
        android:id="@+id/account_userSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/account_tv_sex"
        android:textSize="14sp"
        android:textColor="@color/text"
        android:layout_centerVertical="true"
        />

</RelativeLayout>
<RelativeLayout
    android:layout_below="@+id/account_sex"
    android:id="@+id/account_brithday"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/account_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:text="生日" />

    <ImageView
        android:id="@+id/account_iv_brithday"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/brq" />

    <TextView
        android:id="@+id/account_tv_brithday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:textColor="@color/text"
        android:layout_toLeftOf="@+id/account_iv_brithday"
         />
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"
        android:layout_below="@+id/account_tv3"
        />

    <TextView
        android:id="@+id/acc_tv_brithday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:textSize="14sp"
		android:textColor="@color/text"
        android:layout_alignRight="@+id/account_tv_brithday"
        />

</RelativeLayout>
<RelativeLayout
    android:layout_below="@+id/account_brithday"
    android:id="@+id/account"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/account_tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:text="账户安全" />

    <ImageView
        android:id="@+id/account_iv_protected"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/brq" />

    <TextView
        android:id="@+id/account_tv_protected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:textColor="@color/text"
        android:layout_toLeftOf="@+id/account_iv_protected"
         />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:textSize="14sp"
		android:textColor="@color/text"
        android:layout_alignRight="@+id/account_tv_protected"
        android:text="修改密码" />
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"
        android:layout_below="@+id/account_tv4"
        />

</RelativeLayout>

	<RelativeLayout 
	    android:layout_alignParentBottom="true"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="30dp"
	    >
	    
	    <TextView 
	        android:id="@+id/exit"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/dialog_btn"
			android:textSize="16sp"
			android:textColor="@color/write"
	        android:paddingTop="8dp"
	        android:paddingBottom="8dp"
	        android:layout_margin="20dp"
	        android:gravity="center"
	        android:text="退出登录"
	        />
	</RelativeLayout>


</RelativeLayout>
